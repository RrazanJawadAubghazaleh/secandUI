<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.SearchFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background_button_textview_main">

        <ImageView
            android:id="@+id/image_search_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/magnifying_glass" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_toStartOf="@+id/image_coloroverlay"
            android:layout_toEndOf="@id/image_search_search"
            android:fontFamily="@font/now_regular"
            android:lineSpacingExtra="29.7sp"
           android:hint="Find your plate or restaurant"
            android:textColor="@color/colorEdit"
            android:textSize="11.6sp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/image_coloroverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/coloroverlay" />
    </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         />

</LinearLayout>